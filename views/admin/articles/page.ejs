<%- include('../../partials/header.ejs'); %>
<body>
  <%- include('../../partials/homeNavbar.ejs'); %>
  <div class="container">
    <hr />
    <% result.articles.rows.forEach((article)=>{ %>
    <div class="card">
      <div class="card-header">
        <h2><%= article.title %></h2>
      </div>
      <div class="card-body">
        <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
      </div>
    </div>
    <br />
    <% }) %>
    <div class="row">
      <div class="col col-12">
        <% if(result.page>2){ %>
        <a style="float: left" href="/articles/page/<%= result.page - 1 %>">
          &lt&lt&lt Prev
        </a>
        <% }else{%>
        <a style="float: left" href="/>"> &lt&lt&lt Prev </a>
        <% } %> <% if(result.next){ %>
        <a style="float: right" href="/articles/page/<%= result.page + 1 %>"
          >Next >>></a
        >
        <% }%>
      </div>
      <hr />
    </div>
    <hr />
  </div>
</body>
<%- include('../../partials/footer.ejs') %>
