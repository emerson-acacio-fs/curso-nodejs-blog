<%- include('../../partials/header.ejs'); %>
<body>
  <div class="container">
    <hr />
    <div class="card">
      <div class="card-header">
        <h2>Login de admin</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/authenticate">
          <input
            class="form-control"
            type="email"
            name="email"
            placeholder="Defina o e-mail"
          />
          <br />
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Defina a senha"
          />
          <br />
          <button type="submit" class="btn btn-success btn-block">Logar</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer.ejs') %>
</body>
